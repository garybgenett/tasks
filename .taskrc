################################################################################
# task configuration file
################################################################################

data.location=				/.g/_data/zactive/_pim/tasks

include					/usr/share/task/rc/holidays.en-US.rc

########################################

taskd.server=				server.example.net:53589
taskd.credentials=			local/user/17835bc0-774f-415e-956a-d5ca07c3069f

taskd.ca=				/.g/_data/zactive/.home/.openssl/server-ca.example.net.crt
taskd.certificate=			/.g/_data/zactive/.home/.openssl/client.example.net.crt
taskd.key=				/.g/_data/zactive/.home/.openssl/client.example.net.key
debug.tls=				1

########################################

defaultwidth=				0
defaultheight=				0

detection=				on
xterm.title=				no

################################################################################

default.command=			view
locking=				on

debug=					no
exit.on.missing.db=			yes
verbose=				yes

########################################

recurrence=				no
recurrence.limit=			1

indent.annotation=			2
indent.report=				0

abbreviation.minimum=			1
bulk=					1

search.case.sensitive=			no
expressions=				on
regex=					yes

list.all.projects=			yes
list.all.tags=				yes
print.empty.columns=			yes

journal.info=				on
journal.time=				yes
journal.time.start.annotation=		[track]:[begin]
journal.time.stop.annotation=		[track]:[end]

################################################################################

weekstart=				Monday
due=					14
monthsperline=				3

dateformat=				Y-M-D
dateformat.holiday=			Y-M-D
dateformat.report=			Y-M-D

dateformat.annotation=			Y-M-D H:N:S
dateformat.edit=			Y-M-D H:N:S
dateformat.info=			Y-M-D H:N:S

########################################

include					/usr/share/task/rc/dark-16.theme
color=					on

color.debug=				cyan on yellow
color.error=				cyan on red

color.footnote=				cyan
color.header=				cyan

color.active=				on green
color.alternate=			on black

color.blocked=				cyan
color.blocking=				yellow
color.completed=			blue
color.deleted=				underline blue
color.recurring=			red
color.scheduled=			magenta
color.tagged=				none

color.uda.priority.H=			magenta
color.uda.priority.M=			magenta
color.uda.priority.L=			magenta

color.due.today=			white on red
color.due=				black on red
color.overdue=				yellow on red

color.calendar.due.today=		white on red
color.calendar.due=			black on red
color.calendar.holiday=			black on yellow
color.calendar.overdue=			yellow on red
color.calendar.today=			black on white
color.calendar.weekend=			none
color.calendar.weeknumber=		cyan

################################################################################

uda.kind.label=				Kind
uda.kind.type=				string
uda.kind.values=			notes,track

uda.area.label=				Area
uda.area.type=				string
uda.area.values=			_gtd,computer,family,money,people,self,travel,work,writing

########################################

report.dump.description=		Custom [Dump]: Shows all information
report.dump.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,wait,scheduled,until,due,end,uuid,parent,imask,mask
report.dump.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+WAIT,+HOLD,+REAP,+DEAD,+DIED,+UUID,+PUID,+I,+M
report.dump.filter=			#>>>
report.dump.sort=			entry+

report.fail.description=		Custom [Fail]: Finds non-conforming tasks
report.fail.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,wait,scheduled,until,due,end,imask,mask
report.fail.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+WAIT,+HOLD,+REAP,+DEAD,+DIED,+I,+M
report.fail.filter=			(((project:_data or project:_journal or project:.someday) kind.not:notes) or (project.none: kind:notes) or (status.not:pending kind:track) or (kind.any: tags.any: ) or (kind.none: tags.none: ) or (area.none: ) or (priority.any: or wait.any: or scheduled.any: or until.any: ))
report.fail.sort=			entry+

########################################

report.data.description=		Custom [Data]: Reference and non-task data
report.data.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,due,end,imask
report.data.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+DEAD,+DIED,+I
report.data.filter=			(project:_data or project:_journal)
report.data.sort=			project+,kind+,area-,description+,entry+

report.meta.description=		Custom [Meta]: Metadata and recurring tasks
report.meta.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,due,end,imask
report.meta.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+DEAD,+DIED,+I
report.meta.filter=			((project.not:_data project.not:_journal (kind.any: or recur.any: or tags:.research or tags:.waiting)) or +ACTIVE)
report.meta.sort=			project+,kind+,area-,description+,entry+

########################################

report.mark.description=		Custom [Mark]: Time tacking tasks
report.mark.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,due,end,imask
report.mark.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+DEAD,+DIED,+I
report.mark.filter=			((status:pending kind:track) or +ACTIVE)
report.mark.sort=			project+,description+,entry+

########################################

report.read.description=		Custom [Read]: List view, unfiltered and sorted for review
report.read.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status,priority,entry,due,end,imask
report.read.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT,+P,+BORN,+DEAD,+DIED,+I
report.read.filter=			#>>>
report.read.sort=			project+,kind+,depends+,description+,entry+

report.sort.description=		Custom [Sort]: List view, unfiltered and sorted by dates
report.sort.columns=			entry,entry.age,due,recur,end,id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,status,priority,imask
report.sort.labels=			+BORN,A,+DEAD,R,+DIED,ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,STAT,+P,+I
report.sort.filter=			#>>>
report.sort.sort=			end+,due+,modified+,entry+

########################################

report.mind.description=		Custom [Mind]: Reminders for all tasks with due date
report.mind.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status
report.mind.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT
report.mind.filter=			(status:pending due.any: )
report.mind.sort=			start-,due+,priority-,urgency-,project+,depends+,entry+

report.todo.description=		Custom [Todo]: Due and priority tasks
report.todo.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status
report.todo.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT
report.todo.filter=			((status:pending (priority.any: or (kind.none: +ANNOTATED) or (+DUE or +TODAY or +OVERDUE))) or +ACTIVE)
report.todo.sort=			start-,due+,priority-,urgency-,project+,depends+,entry+

report.view.description=		Custom [View]: Default list view
report.view.columns=			id,depends,urgency.integer,start.age,due.age,description.count,project,kind,area,tags,entry.age,recur,status
report.view.labels=			ID,B,U,S,D,DESCRIPTION,PROJECT,KIND,AREA,TAGS,A,R,STAT
report.view.filter=			((project.not:_data project.not:_journal project.not:.someday kind.none: (status:pending (recur.none: or +TODAY or +OVERDUE) (-BLOCKED or +DUE or +TODAY or +OVERDUE))) or +ACTIVE)
report.view.sort=			start-,due+,priority-,urgency-,project+,depends+,entry+

#>>>report.next.sort=			urgency-,due+,priority-,start-,project+

################################################################################
# end of file
################################################################################
